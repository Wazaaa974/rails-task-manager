<h1><%=@task.title%></h1>


<h2><%= @task.details %></h2>
<h2><%=link_to "EDIT", edit_task_path%></h2>
<% if @task.completed == true %>
<%= "This task is complted" %>
<% else %>
<%= "This task has not been completed yet" %>
<% end %>

<h2><%=link_to "Go back to tasks", tasks_path%></h2>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
